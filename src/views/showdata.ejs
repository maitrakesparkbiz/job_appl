<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
  <title>Document</title>
  <style>
        tr:nth-child(even) {
            background-color: #4d4d4d;
            color: rgb(228, 228, 228);
        }
        tr:nth-child(odd) {
            background-color: #363537;
            color: rgb(242, 242, 242);
        }
        a{
          text-decoration: none;
          color: antiquewhite;
        }
        th{
          background-color: #91aebf;
text-decoration: none;
color: #fff9f1;
        }
        table{
          border-collapse: collapse;
          width: 100%;
        }
  </style>
</head>
<body>
  
  <form action="">
    <input type="text" name="name" id="name" onkeyup="showHint(this.value)">
  </form>
  <p id="txtHint"></p>
  
  <table>
    <tr>
    <th> ID</th>
    <th> First Name</th>
    <th> LAst Name</th>
    <th> Email</th>
    <th> Designation</th>
    <th colspan="3"> Action</th>

  </tr>
    <%  for (let i = 0; i < results.length; i++) {%>
      <tr>
        <td>
            <%=results[i].id%>
        </td>
        <td>
          <%=results[i].fname%>
        </td>
      <td>
        <%=results[i].lname%>
      </td>
      <td>
        <%=results[i].email%>
      </td>
      <td>
        <%=results[i].designation%>
      </td>
      <td>
        <a href="/edit?id=<%=results[i].id%>&view=enable">View</a>
      </td>
      <td>
        <a href="/edit?id=<%=results[i].id%>&view=disable">EDIT</a>
      </td>
      <td>
        <a href="/remove?id=<%=results[i].id%>">Remove</a>
      </td>
      </tr>


    <%}%>
  </table>
</body>
<script>
function showHint(str) {
  var xhttp;
  if (str == "") {
    document.getElementById("txtHint").innerHTML = "";
    return;
  }
  xhttp = new XMLHttpRequest();
  xhttp.onreadystatechange = function() {
    if (this.readyState == 4 && this.status == 200) {
    document.getElementById("txtHint").innerHTML = this.responseText;
    }
  };
  xhttp.open("GET", "ajax?q="+str, true);
  xhttp.send();
}

</script>
</html>